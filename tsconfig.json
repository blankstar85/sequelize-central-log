{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "target": "ES2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noUnusedLocals": true
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}
